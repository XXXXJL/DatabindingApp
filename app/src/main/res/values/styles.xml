<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--    底部弹窗动画-->
    <style name="common_bottomPop">
        <item name="android:windowEnterAnimation">@anim/common_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/common_out_bottom</item>
    </style>
    <!--    底部评论弹窗动画-->
    <style name="common_commentPop">
        <item name="android:windowEnterAnimation">@anim/common_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/common_out_bottom</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="Common_FullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Common_NoActionBarLightLandscapeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/common_colorPrimary</item>
        <item name="colorPrimaryDark">@color/common_colorPrimaryDark</item>
        <item name="colorAccent">@color/common_colorAccent</item>
        <!--设置用于共享元素-->
        <item name="android:windowSharedElementEnterTransition" tools:ignore="NewApi">
            @transition/grid_detail_transition
        </item>
        <item name="android:windowSharedElementExitTransition" tools:ignore="NewApi">
            @transition/grid_detail_transition
        </item>
    </style>

    <style name="Common_NoActionBarLightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/common_colorPrimary</item>
        <item name="colorPrimaryDark">@color/common_colorPrimaryDark</item>
        <item name="colorAccent">@color/common_colorAccent</item>

        <!--        <item name="android:screenOrientation">portrait</item>-->
        <!--        <item name="android:windowIsTranslucent">true</item>-->
        <!--        <item name="android:windowDisablePreview">true</item>-->

        <!--设置用于共享元素-->
        <item name="android:windowSharedElementEnterTransition" tools:ignore="NewApi">
            @transition/grid_detail_transition
        </item>
        <item name="android:windowSharedElementExitTransition" tools:ignore="NewApi">
            @transition/grid_detail_transition
        </item>
    </style>

    <style name="Common_NoActionBarDarkTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorAccent">@color/common_colorAccent</item>
    </style>

    <style name="TranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


